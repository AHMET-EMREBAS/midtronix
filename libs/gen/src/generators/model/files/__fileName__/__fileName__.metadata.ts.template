import {
  EntityMetadata,
  PropertyMetadata,
  BaseEntityMetadata,
  TableFields,
  KeyOf,
} from '@mdtx/common';
import { I<%- className %> } from './<%- fileName %>';

export class <%- className %>Metadata
  extends BaseEntityMetadata<I<%- className %>>
  implements EntityMetadata<I<%- className %>>
{
  name(): PropertyMetadata<I<%- className %>> {
    return {
      name: 'name',
      label: 'Name',
      type: 'string',
      inputType: 'text',
      required: true,
      minlength: 3,
      maxlength: 50,
      order: 201,
    };
  }

  override propertyNames(): KeyOf<I<%- className %>>[] {
    return [this.name().name,  ...super.propertyNames()];
  }

  override tableColumnNames(): TableFields<I<%- className %>> {
    return [...super.tableColumnNames()];
  }

  override columns(): PropertyMetadata<I<%- className %>>[] {
    return [this.name(), ...super.columns()];
  }

  override formFields() {
    return [this.name(),  this.active()];
  }
}
